@model IEnumerable<TecWeb.ControlAsistencia.Curso>

@{
    ViewBag.Title = "Mis Cursos";
}

<h2>Mis Cursos</h2>
<div class="separator"></div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Seccion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Seccion)
        </td>
        <td>
            @Html.ActionLink("Detalles", "Detalles","Curso", new { id=item.ID},null)
        </td>
    </tr>
}

</table>
