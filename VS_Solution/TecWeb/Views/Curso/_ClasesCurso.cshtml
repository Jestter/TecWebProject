@model TecWeb.ControlAsistencia.Curso

<table class="table">
    <tr>
        <th style="text-align:center">
            Descripción
        </th>
        <th style="text-align:center">
            Fecha
        </th>
        <th style="text-align:center">
            Tipo
        </th>
        <th style="text-align:center">
            Título
        </th>
        <th style="text-align:center">
            Asistencia
        </th>

        <th></th>
    </tr>

@foreach (var item in Model.Horario) {
    <tr>
        <td style="text-align:center;vertical-align:middle">
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td style="text-align:center;vertical-align:middle">
            @Html.DisplayFor(modelItem => item.Fecha)
            @if (DateTime.Today.DayOfYear == item.Fecha.DayOfYear)
            {<p style="font-size:12pt;color:lime;font-weight:bold"> Hoy </p> }
        </td>
        <td style="text-align:center;vertical-align:middle">
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td style="text-align:center;vertical-align:middle">
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td style="text-align:center;vertical-align:middle">
            <a class='btn btn-default' href='@Url.Action("Index","Registro",item)'>Registrar</a>
        </td>

    </tr>
}

</table>
