<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Proyecto Tecnologías Web</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    
    <span class="ir-arriba ">
        <i class="glyphicon glyphicon-circle-arrow-up" aria-hidden="true"></i>
    </span>

    <div class="navbar navbar-default navbar-fixed-top" style="height:100px">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">
                    <img src="/Content/img/logo.png" style="width: 100%; max-width: 300px; min-width: 200px " alt="logo" />
               </a>
            </div>
            <div class="navbar-collapse collapse">   
                <div class="pull-right hidden-md hidden-sm hidden-xs" style="text-align:right; padding-top: 15px">
                    <a href="http://www.utalca.cl" target="_blank"><img src="/Content/img/logoUtalcaNegro.png" style="height: 25px" alt="logo" /></a>
                </div>       
                
                
                @if (TecWeb.Util.Sesion.Authenticated())
                {
                    <br style="clear: both" />
                    <ul class="nav navbar-nav navbar-right">
                        <li style="font-weight: bolder">@Html.ActionLink("Cursos", "Index", "Curso")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-user"></span>
                                <strong>@TecWeb.Util.Sesion.UserName</strong>
                                <span class="glyphicon glyphicon-chevron-down"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <div class="navbar-login">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <p class="text-center">
                                                    <span class="glyphicon glyphicon-user icon-size"></span>
                                                </p>
                                            </div>
                                            <div class="col-lg-8">
                                                <p class="text-left"><strong>@TecWeb.Util.Sesion.UserName</strong></p>
                                                <!--p class="text-left">
                                                    <a href="@Url.Action("Index","Usuario")" class="btn btn-primary btn-block btn-sm">Mis Cursos</a>
                                                </p-->
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <div class="navbar-login navbar-login-session">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <p>
                                                    <a href="@Url.Action("Logout", "Usuario")" class="btn btn-danger btn-block">Cerrar Sesión</a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>

    <div class="container body-content" style="padding-top: 50px;">
        @RenderBody()
        <hr />
        <footer>
            <p>Proyecto Tecnologías Web &copy; @DateTime.Now.Year </p>
        </footer>
    </div>    

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {

            $('.ir-arriba').click(function () {
                $('body, html').animate({
                    scrollTop: '0px'
                }, 300);
            });

            $(window).scroll(function () {
                if ($(this).scrollTop() > 0) {
                    $('.ir-arriba').slideDown(300);
                } else {
                    $('.ir-arriba').slideUp(300);
                }
            });

        });


    </script>


</body>
</html>