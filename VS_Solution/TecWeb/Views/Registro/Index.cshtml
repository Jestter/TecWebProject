@model TecWeb.ControlAsistencia.Clase

<h1>
    <a class="glyphicon glyphicon-circle-arrow-left back-btn" aria-hidden="true" href=@Url.Action("Detalles/" + @TecWeb.Util.Curso.ID, "Curso")></a>
</h1>
<h2>Registro Asistencia</h2>
<div class="separator"></div>

<div>    
    <dl class="dl-horizontal">
        <dt>
            Curso
        </dt>

        <dd>
            @TecWeb.Util.Curso.Nombre
        </dd>
        <dt>
            Fecha
        </dt>

        <dd>
            @Model.Fecha.ToString("dd/MM/yyyy HH:mm")
        </dd>

        <dt>
            Lista de Alumnos
        </dt>

        <dd>
            @Html.Partial("_Alumnos", Model)
        </dd>

    </dl>
</div>
